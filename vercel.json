{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/test", "dest": "/api/test.js" },
    { "src": "/api/all-words", "dest": "/api/all-words.js" },
    { "src": "/api/batch-update", "dest": "/api/batch-update.js" },
    { "src": "/api/db", "dest": "/api/db.js" },
    { "src": "/api/unit-stats", "dest": "/api/unit-stats.js" },
    { "src": "/api/word-action", "dest": "/api/word-action.js" },
    { "src": "/api/words/(?<unit>[0-9]+)", "dest": "/api/words.js" },
    { "src": "/api/words/(?<id>[a-zA-Z0-9]+)", "dest": "/api/words/[id].js" },
    { "src": "/api/words", "dest": "/api/words.js" },
    { "src": "/sw.js", "dest": "/public/sw.js", "headers": { "Service-Worker-Allowed": "/" } },
    { "src": "/manifest.json", "dest": "/public/manifest.json" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
